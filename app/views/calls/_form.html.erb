<%= form_with(model: call, local: true) do |form| %>
  <% if call.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(call.errors.count, "error") %> prohibited this call from being saved:</h2>

      <ul>
        <% call.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="fields">
    <p>
      <%= form.label :source_number%>
      <%= form.collection_select :source_number_id, Number.all, :id, :number %>
    </p>
    <p>
      <%= form.label :target_number%>
      <%= form.collection_select :target_number_id, Number.all, :id, :number %>
    </p>
    <p>
      <%= form.label :call_length%>
      <%= form.number_field :call_length%>
    </p>
    <p>
      <%= form.label :time%>
      <%= form.datetime_select :time%>
    </p>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
