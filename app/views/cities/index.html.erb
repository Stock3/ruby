<p id="notice"><%= notice %></p>

<h1>Cities</h1>

<table>
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= link_to 'View', city %></td>
        <% if  admin_user_signed_in? %>
          <td><%= link_to 'Edit', edit_city_path(city) %></td>
          <td><%= link_to 'Delete', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if  admin_user_signed_in? %>
  <%= link_to 'New City', new_city_path %>
<% end %>